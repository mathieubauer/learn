{% extends 'base.html.twig' %}

{% block body %}
    <h1>Unit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ unit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ unit.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td class="typo_code">{{ unit.content }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ unit.type }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('unit_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('unit_edit', { 'id': unit.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
