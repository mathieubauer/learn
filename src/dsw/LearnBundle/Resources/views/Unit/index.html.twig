{% extends 'base.html.twig' %}

{% block body %}
    <h1>Units list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Content</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for unit in units %}
            <tr>
                <td><a href="{{ path('unit_show', { 'id': unit.id }) }}">{{ unit.id }}</a></td>
                <td>{{ unit.name }}</td>
                <td class="typo_code">{{ unit.content }}</td>
                <td>{{ unit.type }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('unit_show', { 'id': unit.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('unit_edit', { 'id': unit.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('unit_new') }}">Create a new unit</a>
        </li>
    </ul>
{% endblock %}
