{% extends "dswLearnBundle::layout.html.twig" %}
{% block title %}{{ parent() }} - {{ course.name }} - Param√®tres{% endblock %}
{% block dsw_learn_content %}
   
    <h1>{{ course.name }}</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ course.code }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('course_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('course_edit', { 'id': course.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
