{% extends "dswLearnBundle::layout.html.twig" %}
{% block title %}{{ parent() }} - Supprimer un module{% endblock %}
{% block dsw_ampli_jumbotron %}{% endblock %}

{% block dsw_learn_content %}
<div class="container my-5">

    <h1>Supprimer un module</h1>

    <p>Etes-vous certain de vouloir supprimer le module "{{ module.name }}" ainsi que les ??? et ??? correspondants ?</p>

    {# On met l'id de l'annonce dans la route de l'action du formulaire #}
    <form action="{{ path('module_delete', {'id': module.id}) }}" method="post">
    
    <a href="{{ path('module_play', {'id': module.id}) }}" class="btn btn-primary">
    Annuler
    </a>
    
    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
    </form>
    
</div>
{% endblock %}