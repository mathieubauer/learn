{% extends 'dswCoreBundle::layout.html.twig' %}

{% block body %}
<div class="container my-5">
   
    <h1>Question</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Intitule</th>
                <td>{{ question.intitule }}</td>
            </tr>
            <tr>
                <th>Theme</th>
                <td>{{ question.theme }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('eval_question_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('eval_question_edit', { 'id': question.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    
    <a href="{{ path('eval_question_new') }}" class="btn btn-primary">Cr√©er une nouvelle question</a>
    
</div>  
{% endblock %}
