{% extends "dswCoreBundle::base.html.twig" %}

{% block body %}
<div class="container my-5">
   
    <h1>Answer</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>Answer</th>
                <td>{{ answer.answer }}</td>
            </tr>
            <tr>
                <th>Feedback</th>
                <td>{{ answer.feedback }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ answer.score }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('quiz_answer_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('quiz_answer_edit', { 'id': answer.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    
</div>    
{% endblock %}
