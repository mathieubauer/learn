{% extends 'base.html.twig' %}

{% block body %}
    <h1>Seances list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Code</th>
                <th>Filepath</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for seance in seances %}
            <tr>
                <td><a href="{{ path('feedback_seance_show', { 'id': seance.id }) }}">{{ seance.id }}</a></td>
                <td>{{ seance.name }}</td>
                <td>{{ seance.code }}</td>
                <td>{{ seance.filepath }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('feedback_seance_show', { 'id': seance.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('feedback_seance_edit', { 'id': seance.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('feedback_seance_new') }}">Create a new seance</a>
        </li>
    </ul>
{% endblock %}
